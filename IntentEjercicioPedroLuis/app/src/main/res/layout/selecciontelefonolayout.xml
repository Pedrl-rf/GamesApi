<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondopastel"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ganador"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/fascinate"
            android:gravity="center_horizontal"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fascinate"
            android:text="¿Cuál de estos premios quieres?"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pscindo" />

            <TextView
                android:id="@+id/tx_ps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/fascinate"
                android:gravity="center_horizontal"
                android:text="PS5"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nintendo" />

            <TextView
                android:id="@+id/tx_nintendo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/fascinate"
                android:text="Nintendo Switch"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="607dp"
                app:srcCompat="@drawable/iphone" />

            <TextView
                android:id="@+id/tx_iphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/fascinate"
                android:text="Iphone 12 Mini 64GB"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/opcionespremios"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/playstation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fascinate"
                    android:text="PS5"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/nintendo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fascinate"
                    android:text="NINTENDO SWITCH"
                    android:textSize="20dp" />

                <RadioButton
                    android:id="@+id/iphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fascinate"
                    android:text="IPHONE 12 MINI"
                    android:textSize="20dp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/but_enviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Enviar" />
    </LinearLayout>
</ScrollView>